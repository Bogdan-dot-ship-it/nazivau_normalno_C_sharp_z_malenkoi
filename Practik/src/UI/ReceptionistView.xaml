<UserControl x:Class="UI.ReceptionistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Register Client -->
        <materialDesign:Card Grid.Column="0" Margin="8" Padding="16">
            <StackPanel>
                <TextBlock Text="Register Client" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0 0 0 16"/>
                <TextBox materialDesign:HintAssist.Hint="First Name" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding ClientFirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 8"/>
                <TextBox materialDesign:HintAssist.Hint="Last Name" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding ClientLastName, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 8"/>
                <TextBox materialDesign:HintAssist.Hint="Phone Number" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding ClientPhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 8"/>
                <TextBox materialDesign:HintAssist.Hint="Email" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding ClientEmail, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 16"/>
                <Button Content="Register Client" Command="{Binding RegisterClientCommand}"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Register Device -->
        <materialDesign:Card Grid.Column="1" Margin="8" Padding="16">
            <StackPanel>
                <TextBlock Text="Register Device" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0 0 0 16"/>
                <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="Client"
                          ItemsSource="{Binding Clients}"
                          DisplayMemberPath="DisplayName"
                          SelectedItem="{Binding SelectedClient}"
                          Margin="0 0 0 8"/>

                <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="Device Type"
                          ItemsSource="{Binding DeviceTypes}"
                          DisplayMemberPath="Name"
                          SelectedItem="{Binding SelectedDeviceType}"
                          Margin="0 0 0 8"/>
                <TextBox materialDesign:HintAssist.Hint="Manufacturer" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding DeviceManufacturer, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 8"/>
                <TextBox materialDesign:HintAssist.Hint="Model" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding DeviceModel, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 8"/>
                <TextBox materialDesign:HintAssist.Hint="Serial Number" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding DeviceSerialNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 16"/>
                <Button Content="Register Device" Command="{Binding RegisterDeviceCommand}"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Create Repair Order -->
        <materialDesign:Card Grid.Column="2" Margin="8" Padding="16">
            <StackPanel>
                <TextBlock Text="Create Repair Order" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0 0 0 16"/>
                <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="Device"
                          ItemsSource="{Binding Devices}"
                          SelectedItem="{Binding SelectedOrderDevice}"
                          Margin="0 0 0 8">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding ClientName}"/>
                                <Run Text=" — "/>
                                <Run Text="{Binding DeviceTypeName}"/>
                                <Run Text=" — "/>
                                <Run Text="{Binding Manufacturer}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding Model}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBox materialDesign:HintAssist.Hint="Problem Description" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding ProblemDescription, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Height="150" Margin="0 0 0 16" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                <Button Content="Create Order" Command="{Binding CreateRepairOrderCommand}"/>
                <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="0 16 0 0"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
